<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="number"
            type="String" />

        <variable
            name="details"
            type="String" />

        <variable
            name="drawable"
            type="Integer" />

        <variable
            name="image"
            type="String" />

        <variable
            name="background"
            type="Integer" />

        <variable
            name="isVisible"
            type="Boolean" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:cardBg="@{background}"
                app:cardCornerRadius="@dimen/dp_5">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    app:drawable="@{drawable}"
                    app:imageUrl="@{image}" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextAppearance.Toggle.Toolbar.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@{@string/phone_number(number)}"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="akdkfkasd" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextAppearance.Toggle.Toolbar.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@{details}"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="by me" />
            </LinearLayout>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{clickListener}"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_trash"
                app:booleanVisibility="@{isVisible}" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>




